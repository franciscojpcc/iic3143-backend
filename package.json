{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon api/index.js",
    "lint": "eslint ./api api/index.js",
    "lint-fix": "eslint --fix ./api api/index.js",
    "migrate-undo": "yarn sequelize db:migrate:undo:all",
    "migrate": "yarn sequelize db:migrate",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand --detectOpenHandles --forceExit",
    "pretest": "cross-env NODE_ENV=test yarn db:reset",
    "db:reset": "yarn sequelize-cli db:drop && yarn sequelize-cli db:create && yarn migrate && yarn seeds",
    "seeds": "yarn sequelize db:seed:all"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pg": "^8.11.3",
    "prettier": "^3.0.3",
    "sequelize": "^6.33.0"
  },
  "repository": "https://github.com/franciscojpcc/iic3143-backend.git",
  "devDependencies": {
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  }
}
